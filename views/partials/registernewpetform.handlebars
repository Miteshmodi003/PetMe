<div class="row">
    <form class="newpetform" id="registerNewPet">
        <div class="form-row">
            <div class="form-group input-group input-group-lg col-lg-4">
                <div class="dropdown">
                    <button class="btn btn-lg btn-default dropdown-toggle" type="button" id="age" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        Age
                    </button>
                    <div class="dropdown-menu" aria-labelledby="age">
                        <a class="dropdown-item" value="baby">Baby</a>
                        <a class="dropdown-item" value="young">Young</a>
                        <a class="dropdown-item" value="adult">Adult</a>
                        <a class="dropdown-item" value="old">Old</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4"></div>

            <div class="form-group input-group input-group-lg col-lg-4">
                <div class="dropdown">
                    <button class="btn btn-lg btn-default dropdown-toggle" type="button" id="petType"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Pet Type
                    </button>
                    <div class="dropdown-menu" aria-labelledby="petType">
                        <a class="dropdown-item" value="dog">Dog</a>
                        <a class="dropdown-item" value="cat">Cat</a>
                        <a class="dropdown-item" value="bird">Bird</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="text" class="form-control" placeholder="Breed" id="breed">
            </div>

            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="text" class="form-control" placeholder="Pet Name" id="petname">
            </div>

            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="number" class="form-control" placeholder="Zip" id="zipcode">
            </div>

            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="file" class="form-control font-weight-light text-muted" id="upload">
            </div>
        </div>

        <div class="form-row">
            <div class="col-xs-4"></div>
            <div class="form-group input-group-btn col-xs-4 col-lg-12">
                <button class="btn-lg btn-warning" type="submit">Register a Pet!</button>
            </div>
            <div class="col-xs-4"></div>
        </div>
    </form>

</div>