<div class="row mt-5">
    <h1>Register Admin</h1>
    <form id="adminregisterform">

        <div class="form-row">
            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="text" class="form-control" placeholder="First Name" id="firstName">
            </div>

            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="text" class="form-control" placeholder="Last Name" id="lastName">
            </div>

            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="text" class="form-control" placeholder="Role" id="roleAdmin">
            </div>

            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="text" class="form-control" placeholder="Email" id="adminemail">
            </div>

            <div class="form-group input-group input-group-lg col-lg-6">
                <input type="password" class="form-control" placeholder="Password" id="password">
            </div>
        </div>

        <div class="form-row">
            <div class="col-xs-4"></div>
            <div class="form-group input-group-btn col-xs-4 col-lg-12">
                <button class="btn-lg btn-primary" type="submit">Register Admin</button>
            </div>
            <div class="col-xs-4"></div>
        </div>
    </form>

    <p id="status">{{result}}</p>

</div>