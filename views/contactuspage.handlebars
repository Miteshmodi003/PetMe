<div class="page-holder bg-cover">
    <div class="mask rgba-gradient align-items-center">
        {{> navigationbar}}



        <div class="contact-section">
            <h1> Contact Us </h1>

            <div class="border"> </div>

            <form class="contact-form" action="index.html" method="post">
                <input type="text" class="contact-form-text" id = "name" placeholder="Your Name" maxlength="64" required>
                <input type="email" class="contact-form-text" id = "email" placeholder="Your Email" maxlength="96" required><small id="emailHelp"
                    class="form-text text-muted">We'll never share your email with anyone else.</small>
                <input type="number" class="contact-form-text" id = "phonenumber" placeholder="Your Phone Number" maxlength="32">
                <textarea class="contact-form-text" id = "message" placeholder="Please type in your Message" maxlength="500"></textarea>
                <input type="submit" class="contact-form-btn" value="Send">
            </form>
        </div>



        <div class="page-wrapper">

        </div>

